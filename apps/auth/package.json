{
  "name": "@apps/auth",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run codegen && tsc && npx prisma generate && cp -r ./src/graphql/schema/ ./dist/graphql/schema && cp -r ./prisma/* ./dist/prisma/ && cp ./prisma/schema.prisma ./dist/prisma/client/",
    "dev": "concurrently -n auth,graphql \"npm run dev:server\" \"npm run dev:codegen\"",
    "dev:server": "nodemon -r dotenv/config ./src/index.ts",
    "dev:codegen": "graphql-codegen --config codegen.yml --watch src/graphql/schema/*.graphql",
    "start": "npm run db:generate && npm run db:migrate:deploy && node -r dotenv/config ./dist/index.js",
    "codegen": "graphql-codegen --config codegen.yml",
    "db:generate": "prisma generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "format": "npm run format:prisma && npm run format:prettier",
    "format:prisma": "prisma format",
    "format:prettier": "prettier --write ./src",
    "lint": "npm run lint:prisma && npm run lint:prettier && npm run lint:typescript",
    "lint:prisma": "DATABASE_URL=\"postgresql://user:pass@not-real:1234/fvst?schema=public\" prisma validate",
    "lint:typescript": "tsc --noEmit",
    "lint:prettier": "prettier --check ./src"
  },
  "dependencies": {
    "@apollo/server": "^4.3.1",
    "@apollo/subgraph": "^2.2.3",
    "@graphql-tools/load": "^7.8.9",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^4.9.0",
    "bcrypt": "^5.1.0",
    "dataloader": "^2.1.0",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-scalars": "^1.20.1",
    "graphql-shield": "^7.6.5",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^7.14.1",
    "prisma": "^4.9.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.16.4",
    "@graphql-codegen/typescript": "2.8.7",
    "@graphql-codegen/typescript-resolvers": "2.7.12",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
