  "scripts": {
    "postinstall": "npm run generate",
    "predev": "npm run db:migrate:dev",
    "build": "nest build",
    "dev": "npm run generate && npm run db:migrate:deploy && nest start --watch",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "npm run db:migrate:deploy && node dist/main.js",
    "format": "npm run format:prisma && npm run format:prettier && npm run format:es",
    "format:prisma": "prisma format",
    "format:prettier": "prettier --write .",
    "format:es": "eslint . --fix",
    "lint": "npm run lint:prisma && npm run lint:prettier && npm run lint:typescript && npm run lint:es",
    "lint:prisma": "DATABASE_URL=\"postgresql://user:pass@not-real:1234/fvst?schema=public\" prisma validate",
    "lint:typescript": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "lint:es": "eslint .",
    "precommit:format": "prettier --write --ignore-unknown",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate": "prisma generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "health-check": "wait-on http://localhost:5001/health && echo Up"
  },
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@nestjs/apollo": "^12.0.7",
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/graphql": "^12.0.8",
    "@package/nestjs-auth": "*",
    "@package/nestjs-health": "*",
    "@prisma/client": "^5.1.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.8",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@tooling/eslint-config-custom": "*",
    "@tooling/jest": "*",
    "@tooling/nestjs-webpack": "*",
    "@tooling/prettier": "*",
    "@tooling/typescript": "*",
    "prisma": "^5.1.1",
    "ts-jest": "29.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  }
