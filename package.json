{
  "private": true,
  "workspaces": [
    "frontends/*",
    "backends/*",
    "tooling/*",
    "ux/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "next": "13.1.1",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-jest": "^29.0.3",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@9.2.0",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
