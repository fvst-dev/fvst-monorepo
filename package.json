{
  "private": true,
  "workspaces": [
    "apps/*",
    "tooling/*",
    "packages/*",
    "frameworks/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "generate": "turbo run db:generate",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "format": "turbo run format",
    "publishSchema": "export $(cat .env | xargs) && chmod +x ./apps/apollo-gateway/publish_schema_updates.sh && ./apps/apollo-gateway/publish_schema_updates.sh $(pwd)"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "turbo": "^1.6.3"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.2.0",
  "lint-staged": {
    "**/*": "turbo run precommit:format --"
  }
}
