{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "generate", "codegen"],
      "outputs": ["dist/**", ".next/**", "public/dist/**"],
      "env": [
        "VERCEL_URL",
        "PORT",
        "NODE_ENV",
        "DATABASE_URL",
        "CLERK_JWSK_URL",
        "CLERK_ISSUER"
      ]
    },
    "generate": {
      "cache": false
    },
    "codegen": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["generate", "codegen"],
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "outputs": []
    },
    "precommit:format": {
      "cache": false
    }
  }
}
